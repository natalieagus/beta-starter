    // Task 11
    // IRQ handling
    // IRQ can happen only in user mode (ia31 is 0)
    // If IRQ happens during kernel mode, it will not be serviced until we return to user mode

    
    
    
    // force wr = 0 when reset == 1 
    if (rst){
      wr = 0;
    }

  }
